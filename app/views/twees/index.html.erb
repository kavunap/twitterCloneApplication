
<head>
<meta charset = "UTF-8">
<%= javascript_include_tag 'application' %>
</head>
<%= render "layouts/navbar" %>
<%= yield %>
</head>
<body>
<table class = "grid">
  <tr>
    <td>
      <div class="grid-item"> <%= image_tag("p1.png") %> <br><p>john </p></div>
    </td>
    <td>
      <div class="grid-item"> <%= image_tag("p2.png") %><p>peter </p></div>
    </td>
  </tr>
  <tr>
    <td>
      <div class="grid-item"> <%= image_tag("p3.jpg") %><p>Yves </p></div>
    </td>
    <td>
      <div class="grid-item"><%= image_tag("p4.jpg") %> <p>Jacque </p></div>
    </td>
  </tr>
  <tr>
    <td>
      <div class="grid-item"><%= image_tag("p5.jpg") %><p>David </p></div>
    </td>
    <td>
      <div class="grid-item"> <%= image_tag("p6.jpg") %><p>Paul </p></div>
    <td>
  </tr>
</table>

<h1>All Tweets</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Tweet</th>
    <th>send on</th></th>
    <th colspan="3">more actions</th></th>
  </tr>

  <% @twees.each do |twee| %>
    <tr>
      <td><%= twee.content %> </td>
      <td><%=twee.created_on %></td>
      <td><%= link_to ' View Tweet ', twee_path(twee.id) %></td>
      <td><%= link_to ' Edit Tweet ', edit_twee_path(twee.id) %></td>
      <td><%= link_to "Delete", twee_path(twee.id), :class => "btn btn-small btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    
  <% end %>
</table>
<br>
<%= link_to 'Send new Tweet', new_twee_path %> <br>
<button onclick ="scrollFunction()">Go to Top</button>

</body>
</html>
